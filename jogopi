                            alternativa = leitor.next();

                            switch(alternativa){

                              case "a":
                                  System.out.println("Resposta .......... !!ERRADA!! ");
                                    tentativas = tentativas - 1;                        
                                    break;
                              case "b":
                                  System.out.println("Resposta .......... !!ERRADA!! ");
                                    tentativas = tentativas - 1;                        
                                    break;
                              case "c":
                                    resposta = true;
                                    pontos = pontos + 30;
                                    System.out.println("resposta correta ");
                                    System.out.println("pontos: "+pontos);
                                    break;
                              case "d":
                                    System.out.println("Resposta .......... !!ERRADA!! ");
                                    tentativas = tentativas - 1; 
                              break;                 

                              default:
                                    System.out.println("Essa alternativa não existe "); 
                            } }
                
                         
                       }while(tentativas>0);
                     }}
    
    
    
    




